<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Guiziweb\SyliusAIPlatformBundle\Entity\AgentTool" table="guiziweb_ai_agent_tool">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="toolName" type="string" length="255" nullable="false" />
        <field name="enabled" type="boolean" nullable="false" />

        <many-to-one field="agentConfiguration" target-entity="Guiziweb\SyliusAIPlatformBundle\Entity\AgentConfiguration" inversed-by="agentTools">
            <join-column name="agent_configuration_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
        </many-to-one>
    </entity>

</doctrine-mapping>